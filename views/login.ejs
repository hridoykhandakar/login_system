<%-include("./partials/header")-%>

<body>
  <main class="h-screen bg-teal-400 flex items-center justify-center flex-col">
    <div class="title w-96 my-6">
      <h2 class="text-4xl font-bold  text-center text-white mb-4">Login</h2>
      <div class="line h-1 w-full mb-4 bg-white"></div>
    </div>
    <div class="form w-96">
      <form class="flex flex-col gap-3 w-full" action="/login" method="POST">
        <input class="rounded-md py-2 px-3 shadow-sm focus:outline-none focus:border-emerald-500 focus:ring-1 " type="email" name="username" placeholder="Enter Your email">
        <input class="rounded-md py-2 px-3 shadow-sm focus:outline-none focus:border-emerald-500 focus:ring-1 " type="password" name="password" placeholder="Enter Your password">
        <button class="flex sm:inline-flex justify-center items-center bg-blue-500 hover:bg-blue-600 active:bg-blue-700 focus-visible:ring ring-blue-300 text-white font-semibold text-center rounded-md outline-none transition duration-100 px-5 py-2 w-4/12 mx-auto" type="submit">Login</button>
      </form>
    </div>
  </main>
  
</body>
</html>